<div class="l-container">
  <%= render "shared/section", title: "クライアント一覧" do %>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th><%= Client.human_attribute_name(:name) %></th>
            <th><%= Client.human_attribute_name(:users_limit) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.id %></td>
              <td><%= client.name %></td>
              <td><%= client.users_limit %></td>
              <td>
                <div>
                  <%= link_to '編集', edit_system_admin_client_path(client), class: 'btn-default rounded sm' %>
                  <%= link_to '削除', system_admin_client_path(client), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-danger rounded sm' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to '新規作成', new_system_admin_client_path, class: 'btn-primary rounded' %>
  <% end %>
</div>
