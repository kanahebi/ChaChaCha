<div class="l-container">
  <ul class="list-stack">
    <% if @daily_reports.blank? %>
      <li class="list-item">
        <div class="list-body">
          なし
        </div>
      </li>
    <% end %>
    <% @daily_reports.each do |daily_report| %>
      <li class="list-item">
        <%= link_to daily_report_path(daily_report), class: 'list-anchor' do %>
          <div class="list-body">
            <%= l daily_report.date, format: :long %>
          </div>
          <i class="fas fa-chevron-right arrow-icon"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
