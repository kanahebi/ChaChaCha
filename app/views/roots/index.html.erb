<div class="l-container">
  <%= render "shared/section", title: "#{current_user.name}さん、本日もお疲れさまです。" do %>
    <ul class="iconic-list">
      <li class="iconic-list-item">
        <%= link_to new_daily_report_path, class: "iconic-list-anchor" do %>
          <div class="icon">
            <i class="fas fa-hand-point-up"></i>
            <div class="label-icon done">
              <% if current_user.submitted_daily_report_today? %>
                <i class="fas fa-check"></i>
              <% end %>
            </div>
          </div>
          <div class="body">
            今日の日報を入力しましょう
          </div>
          <i class="fas fa-chevron-right arrow-icon"></i>
        <% end %>
      </li>
      <li class="iconic-list-item">
        <%= link_to arigatonas_path, class: "iconic-list-anchor" do %>
          <div class="icon">
            <i class="fas fa-heart"></i>
            <% unless current_user.unchecked_arigatonas_count.zero? %>
              <div class="label-icon arigato"><%= current_user.unchecked_arigatonas_count %></div>
            <% end %>
          </div>
          <div class="body">
            "ありがとう"を見る
          </div>
          <i class="fas fa-chevron-right arrow-icon"></i>
        <% end %>
      </li>
      <li class="iconic-list-item">
        <%= link_to daily_reports_path, class: "iconic-list-anchor" do %>
          <div class="icon">
            <i class="fas fa-search"></i>
          </div>
          <div class="body">
            過去の日報を確認する
          </div>
          <i class="fas fa-chevron-right arrow-icon"></i>
        <% end %>
      </li>
    </ul>
  <% end %>
  <%= link_to 'ログアウト',session_path, method: :delete, class: 'btn-danger rounded' %>
</div>
