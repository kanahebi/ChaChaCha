<%= render "shared/section", title: "ログイン" do %>
  <%= form_with(model: session, url: session_path, local: true) do |form| %>
    <%= render "shared/errors", object: form.object %>

    <%= render "shared/form_group", form: form, name: :unique_name, required: true do %>
      <%= form.text_field :unique_name, class: 'form-control', required: true %>
    <% end %>

    <%= render "shared/form_group", form: form, name: :password, required: true do %>
      <%= form.password_field :password, class: 'form-control', required: true %>
    <% end %>

    <div class="submit-container">
      <%= form.submit 'ログイン', class: 'btn-primary block rounded' %>
    </div>
  <% end %>
<% end %>
