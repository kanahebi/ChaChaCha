<div class="l-container">
  <%= render "shared/section", title: "部署一覧" do %>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th><%= Department.human_attribute_name(:name) %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.name %></td>
              <td>
                <div>
                  <%= link_to '編集', edit_client_admin_department_path(department), class: 'btn-default rounded sm' %>
                  <%= link_to '削除', client_admin_department_path(department), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn-danger rounded sm' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to '新規作成', new_client_admin_department_path, class: 'btn-primary rounded' %>
  <% end %>
</div>
