<div class="l-container">
  <%= render "shared/section", title: "部署一覧" do %>
    <table border=1>
      <thead>
        <tr>
          <th>ID</th>
          <th><%= Department.human_attribute_name(:name) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
          <tr>
            <td><%= department.id %></td>
            <td><%= department.name %></td>
            <td>
              <div>
                <%= link_to '編集', edit_client_admin_department_path(department) %>
                <%= link_to '削除', client_admin_department_path(department), method: :delete, data: { confirm: '本当に削除しますか？' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to '新規作成', new_client_admin_department_path %>
  <% end %>
</div>
